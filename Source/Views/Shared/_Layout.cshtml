@inject Microsoft.ApplicationInsights.AspNetCore.JavaScriptSnippet JavaScriptSnippet
@{
    var site = await WebApp.Site.GetContentAsync<davidsanchez.cr.Models.BlogSite>();
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Hammersmith+One">
    <link rel="stylesheet" href="~/assets/css/style.min.css">

    <title>@ViewBag.Title</title>

    @if (Model is Piranha.Models.IMeta)
    {
        <partial name="Partial/_Meta.cshtml" />
    }

    @RenderSection("head", required: false)
    @Html.Raw(JavaScriptSnippet.FullScript)
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-18J431S7WG"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'G-18J431S7WG');
    </script>
</head>
<body>
    <header role="banner">
        <div class="menu">
            <div class="container">
                <div class="row">
                    <div class="col-sm">
                        <div class="buttons float-right">
                            <a href="https://twitter.com/davidsancheza" target="_blank"><img src="/assets/img/twitter.png"></a>
                            <a href="https://github.com/dasanagu" target="_blank"><img src="/assets/img/github.png"></a>
                            <a href="https://www.linkedin.com/in/dasanagu" target="_blank"><img src="/assets/img/linkedin.png"></a>
                        </div>
                        <partial name="Partial/_Menu.cshtml" />
                    </div>
                </div>
            </div>
        </div>
        <div class="title">
            <div class="container">
                <div class="row">
                    <div class="col-sm">
                        <img src="@Url.Content(site.Information.SiteLogo)">
                        <h1>@site.Information.SiteTitle<small class="d-none d-sm-inline">@site.Information.Tagline</small></h1>
                    </div>
                </div>
            </div>
        </div>
    </header>

    @RenderBody()

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-sm">
                    Copyright &copy; @DateTime.Now.Year @site.Information.SiteTitle | Powered by <a href="https://piranhacms.org" target="_blank">Piranha CMS</a> running with .NET Core @Environment.Version in @Environment.OSVersion on <a href="https://azure.microsoft.com" target="_blank">Microsoft Azure</a>.
                </div>
            </div>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

    @RenderSection("script", required: false)
</body>
</html>